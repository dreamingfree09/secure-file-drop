FROM golang:1.22-alpine AS build
WORKDIR /src

COPY go.mod ./
RUN go mod download

COPY cmd ./cmd
COPY internal ./internal

RUN CGO_ENABLED=0 GOOS=linux go build -o /out/backend ./cmd/backend

FROM alpine:3.20
WORKDIR /app
COPY --from=build /out/backend /app/backend

EXPOSE 8080
ENV SFD_ADDR=:8080

ENTRYPOINT ["/app/backend"]
